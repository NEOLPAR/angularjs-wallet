@import 'nib'
@import 'normalize.css'
@import 'font-awesome.min.css'
@import 'toggle-switch.css'

dark_red=#8f0000
light_blue=#9AD6E3
light_red= #FF9494

.negative-color
  color: dark_red;

#currency-wrapper
  border-top: 1px solid #000000
  ul
    text-align center
    li
      display inline-block
      background-color: #e4e4e4;
      padding: 20px;
      border: 1px solid black;
      i
        background-color: #e4e4e4;
        padding: 20px;
        border: 1px solid #e4e4e4;
      &:not(:first-child):not(:last-child)
        border-right none
        border-left none
      &:first-child
        border-radius 20px 0 0 20px
      &:last-child
        border-radius 0 20px 20px 0
      &.active
        background-color light_blue
        i
          border: 1px solid black !important;

#wallet-wrapper
  header
    border-bottom: 1px solid #000000;
    border-top: 1px solid #000000;
    width: 100%;
    overflow hidden
    add-record-dir
      min-width 430px
      margin 0
      float: left;
      padding-left 20px;
      form
        height: 100%;
        & > *
          float: left
          margin 0 5px
        input, button, .formError
          margin-top: 13px;
        .formError
          background: rgba(0, 0, 0, 0.5);
          position: absolute;
          top: 0;
          left: 0;
          bottom: 0;
          right: 0;
          margin: 0;
          padding: 0;
          .formErrorPanel
            background dark_red
            color #ffffff
            padding: 5px;
            border-radius: 5px;
            position: absolute;
            top: 0;
            left: 0;
            bottom: 0;
            right: 0;
            margin auto
            width 480px
            height 50px
            text-align: center;
            line-height: 2.5;
            font-size: 130%;
            .warning
              margin-top: 4px;
              float: left;
              width: 0;
              height: 0;
              border-left: 20px solid transparent;
              border-right: 20px solid transparent;
              border-bottom: 40px solid #ff0;
    .width-limit
      min-width: 480px;
      max-width: 750px;
      margin: auto;
    total-dir
      margin 0
      padding-right 20px
      font-size: 2.5em;
      float: right;
  article
    record-list-dir
      ul
        min-width: 480px
        max-width: 750px
        margin 0 auto
        padding 0
        list-style: none;
        border-radius 1px
        li
          padding 10px
          & .amount-currency
            float right
          &:last-child
            border-radius 0 0 5px 5px
          &:nth-child(2n)
            background lighten(light_blue, 20%)
            &.negative-color
              background lighten(light_red, 20%)
          &:nth-child(2n+1)
            background light_blue
            &.negative-color
              background light_red

nav
  background-color: #000;
  overflow: hidden;
  width: 100%;
  .button-menu
    color: #fff;
    text-align: center;
    width: 100%;
  ul
    &.active
      height 235px !important
    height 0
    margin 0
    padding 0
    transition: height 1s;
    li
      padding 20px
      margin-bottom 1px
      background-color #e4e4e4
    a:hover, a:link, a:visited, a:active
      color: #000000
      text-decoration: none;
    a:hover
      background-color white
@media (min-width: 992px)
  nav
    background-color: #000;
    overflow: hidden;
    width: 100%;
    text-align: center;
    .button-menu
      display none
    ul
      min-width: 410px;
      max-width: 420px;
      margin: auto;
      height inherit !important
      li
        min-width: 80px;
        float left
        height: 100%;
        padding: 10px 10px 5px 10px;
        background-color #e4e4e4
        margin-right 1px
        margin-bottom 0
        border-bottom 5px solid #e4e4e4
      a:hover, a:link, a:visited, a:active
        color: #000000
        text-decoration: none;
      a:hover
        background-color white
        &:nth-child(1)
          li
            border-bottom 5px solid red
        &:nth-child(2)
          li
            border-bottom 5px solid green
        &:nth-child(3)
          li
            border-bottom 5px solid blue
        &:nth-child(4)
          li
            border-bottom 5px solid orange
